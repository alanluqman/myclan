<div class = 'container padding_1r'>
<%= render 'partials/navigation' %>
<h1 class = 'heading_1 primary_color text_center'>New Post</h1>
<%= render 'partials/user' %><br><br>

<%= form_with model: @post , url: user_posts_path , class: 'text_center' do |f| %>
  <%= f.text_field :title , class: 'form_fild heading_4 h_padding_10', placeholder: 'Title'  %><br><br>
  <%= f.text_area :text, class: 'form_fild heading_4 h_padding_10' , placeholder: 'Post text ...' , rows: 6, required: true %><br><br>
  <%= f.submit "Post" , {:class => 'btn green_btn heading_4'} %>
<% end %>
</div>